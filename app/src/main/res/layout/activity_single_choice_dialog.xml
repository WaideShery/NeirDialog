<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.neirx.neirdialogsdemo.SingleChoiceDialogActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single choice dialog with title and all buttons"
        android:id="@+id/btnTitleAllBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single choice dialog with title and two buttons"
        android:id="@+id/btnTitleTwoBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single choice dialog with title and one buttons"
        android:id="@+id/btnTitleOneBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single choice dialog without title and one buttons"
        android:id="@+id/btnNoTitleOneBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single choice dialog without title and buttons"
        android:id="@+id/btnNoTitleNoBtn" />

</LinearLayout>
