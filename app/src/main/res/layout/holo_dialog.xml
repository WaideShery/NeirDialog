<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/HOLO.Layout">

    <TextView
        android:id="@+id/holo_title"
        style="@style/HOLO.TextView.Title"
        tools:text="Title" />

    <LinearLayout style="@style/HOLO.Layout.Content">

        <ScrollView
            android:id="@+id/holo_message_scrollview"
            style="@style/HOLO.ScrollView">

            <TextView
                android:id="@+id/holo_message"
                style="@style/HOLO.TextView.Message"
                tools:text="Lorem ipsum doler samet Jane is awesome guy and Kaylee is so hot." />
        </ScrollView>

        <FrameLayout
            android:id="@+id/holo_custom"
            style="@style/HOLO.Layout.Custom" />

        <ListView
            android:id="@+id/holo_list"
            style="@style/HOLO.ListView" />

    </LinearLayout>

    <View
        android:id="@+id/holo_button_divider"
        style="@style/HOLO.Divider" />

    <RelativeLayout
        android:id="@+id/holo_buttons_default"
        style="@style/HOLO.Layout.Buttons">

        <Button
            android:id="@+id/holo_button_neutral"
            style="@style/HOLO.Button.Neutral"
            tools:text="Neutral" />

        <LinearLayout
            android:id="@+id/holo_buttons_default_right"
            style="@style/HOLO.Layout.Buttons.Right">
            <Button
                android:id="@+id/holo_button_negative"
                style="@style/HOLO.Button"
                tools:text="Negative" />
            <Button
                android:id="@+id/holo_button_positive"
                style="@style/HOLO.Button"
                tools:text="Positive" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/holo_buttons_stacked"
        style="@style/HOLO.Layout.Buttons.Stacked">

        <Button
            android:id="@+id/holo_button_positive_stacked"
            style="@style/HOLO.Button.Stacked"
            tools:text="Positive" />

        <Button
            android:id="@+id/holo_button_negative_stacked"
            style="@style/HOLO.Button.Stacked"
            tools:text="Negative" />

        <Button
            android:id="@+id/holo_button_neutral_stacked"
            style="@style/HOLO.Button.Stacked"
            tools:text="Neutral" />
    </LinearLayout>

    <View
        android:id="@+id/holo_buttons_bottom_space"
        style="@style/HOLO.Space.ButtonsBottom" />
</LinearLayout>