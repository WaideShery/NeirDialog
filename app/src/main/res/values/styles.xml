    <style name="HOLO.Layout">
        <item name="android:background">@drawable/holo_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HOLO.Layout.Content">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HOLO.Layout.Custom">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HOLO.Layout.Buttons">
        <item name="android:layout_height">@dimen/grid_12</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/grid_3</item>
        <item name="android:paddingRight">@dimen/grid_3</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HOLO.Layout.Buttons.Right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="HOLO.Layout.Buttons.Stacked">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="HOLO.Layout.Progress">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="HOLO.ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="HOLO.TextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HOLO.TextView.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/holo_title_text</item>
        <!-- paddings set in code -->
    </style>

    <style name="HOLO.TextView.Message">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:textColor">@color/holo_message_text</item>
        <!-- paddings set in code -->
    </style>

    <style name="HOLO.TextView.Message.Progress">
        <item name="android:paddingRight">@dimen/grid_4</item>
    </style>

    <style name="HOLO.TextView.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/grid_13</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:textColor">@color/holo_list_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/grid_6</item>
        <item name="android:paddingRight">@dimen/grid_6</item>
    </style>

    <style name="HOLO.TextView.MultiChoice">
        <item name="android:minHeight">@dimen/grid_13</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:textColor">@color/holo_list_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/grid_6</item>
    </style>

    <style name="HOLO.ListItemControl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:minHeight">@dimen/grid_13</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/grid_6</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="HOLO.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:paddingLeft">@dimen/grid_6</item>
        <item name="android:paddingRight">@dimen/grid_6</item>
    </style>

    <style name="HOLO.Button">
        <item name="android:background">@color/holo_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/grid_16</item>
        <item name="android:layout_height">@dimen/grid_9</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">@dimen/grid_2</item>
        <item name="android:paddingLeft">@dimen/grid_2</item>
        <item name="android:layout_marginRight">@dimen/grid_1</item>
        <item name="android:layout_marginLeft">@dimen/grid_1</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="HOLO.Button.Neutral" parent="@style/HOLO.Button">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="HOLO.Button.Stacked">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/grid_12</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingRight">@dimen/grid_8</item>
        <item name="android:paddingLeft">@dimen/grid_8</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="HOLO.Expander">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HOLO.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/holo_divider</item>
    </style>

    <style name="HOLO.Space">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="HOLO.Space.ButtonsBottom">
        <item name="android:layout_height">@dimen/grid_2</item>
    </style>

    <style name="HOLO.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/grid_1</item>
        <item name="android:layout_marginLeft">@dimen/grid_4</item>
        <item name="android:layout_marginTop">@dimen/grid_4</item>
        <item name="android:layout_marginBottom">@dimen/grid_4</item>
    </style>

    <style name="HOLO.DatePicker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:spinnersShown" tools:ignore="NewApi">true</item>
        <item name="android:calendarViewShown" tools:ignore="NewApi">false</item>
    </style>

    <style name="HOLO.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <!--item name="android:listSelector">?sdlListSelector</item-->
    </style>
</resources>
